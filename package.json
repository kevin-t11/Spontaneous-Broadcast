{
  "name": "spontaneous-meetup-broadcast",
  "version": "1.0.0",
  "description": "A spontaneous meetup broadcast system with separate workers",
  "main": "index.js",
  "scripts": {
    "dev:api": "nodemon --watch src --exec ts-node src/index.ts",
    "dev:cleanup": "nodemon --watch src/worker --ext ts --exec \"ts-node\" src/worker/cleanup.ts",
    "dev:notification": "nodemon --watch src/worker --ext ts --exec \"ts-node\" src/worker/notification.ts",
    "build": "tsc -b",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bull": "^3.15.9",
    "@types/dotenv": "^6.1.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^22.13.1",
    "@types/nodemon": "^1.19.6",
    "@types/redis": "^4.0.10",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.10.0",
    "node-cron": "^3.0.3",
    "redis": "^4.7.0",
    "typescript": "^5.7.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
